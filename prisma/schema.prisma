// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Wishlist {
    id        Int      @id @default(autoincrement())
    updatedAt DateTime @updatedAt
    name      String   @db.VarChar(255)
    listOwner String   @db.VarChar(255)
}

// One-to-many relationship with Wishlists.
model WishlistItem {
    id           Int      @id @default(autoincrement())
    createdAt    DateTime @db.DateTime()
    updatedAt    DateTime @db.DateTime()
    title        String   @db.VarChar(255)
    notes        String   @db.VarChar(1000)
    productLink  String   @db.VarChar(1000)
    productPrice Float    @db.Double
    purchased    Boolean  @db.Bit(1)
    wishlistID   Int      @db.Int
}

// One-to-many relationship with WishlistItems.
model WishlistItemPhoto {
    id             Int    @id @default(autoincrement())
    wishlistItemID Int    @db.Int
    imageKey       String @db.VarChar(255)
}

model WishlistItemComment {
    id             Int      @id @default(autoincrement())
    createdAt      DateTime @db.DateTime()
    updatedAt      DateTime @db.DateTime()
    comment        String   @db.VarChar(1000)
    wishlistItemID Int      @db.Int
    byUser         String   @db.VarChar(255)
}
